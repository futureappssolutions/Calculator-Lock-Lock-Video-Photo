<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tool_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_semi_bold"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/_15sdp"
                android:text="@string/cal_pin_text"
                android:textColor="@color/White"
                android:textSize="@dimen/_14sdp" />

            <HorizontalScrollView
                android:id="@+id/display_hsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|end">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/display_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font_semi_bold"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_30sdp"
                        android:paddingEnd="@dimen/_30sdp"
                        android:text="Text"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_35ssp" />
                </LinearLayout>
            </HorizontalScrollView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/display_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="text"
                android:textColor="@color/White"
                android:textSize="@dimen/_35ssp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/display_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/white"
            android:orientation="horizontal" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_sin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="sin"
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_cos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="cos"
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_tan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="tan"
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_ln"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="ln"
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_log"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="log"
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_factorial1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="!"
                android:textSize="@dimen/panel_2_button_text_port" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_pi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="π"
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_e"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="e"
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_square_root1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="√"
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_start_parenthesis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="("
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_end_parenthesis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text=")"
                android:textSize="@dimen/panel_2_button_text_port" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_exponent111"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="%"
                android:textSize="@dimen/panel_2_button_text_port" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/calcbackk"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_square_root"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="√"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <LinearLayout
                    android:id="@+id/button_delete"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_backspace"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_factorial"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="!"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_exponent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_decimal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_divide"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="÷"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_multiply"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="×"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_subtract"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="−"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_add"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_equals"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="center"
                    android:text="="
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
